<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../../layout/head-searches %>
</head>
<body>
    <header>

        <% include ../../layout/header-searches %>
        
    </header>
  <h1>Thank you for your search!</h1>

  <section class="form-show">

    <% books.forEach(book => { %>

      <div class="individual-book">
        <form id="tableForm" action="/books" method="POST">
          <img src="<%= book.image %>">
          <input type="text" name="title" value="<%= book.title %>">
          <input type="text" name="author" value="<%= book.author %>">
          <input type="text" name="description" value="<%= book.description %>">
          <input type="submit">
        </form>
      </div>

    <% }) %>
    </section>
  </ul>
</body>
</html>